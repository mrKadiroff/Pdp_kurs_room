<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".guruh.Group_Student_AddFragment">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_child"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:navigationIcon="@drawable/ic_vector__2_"
        app:title="Talaba qo'shish"
        app:titleTextColor="@color/white" />


    <EditText
        android:id="@+id/famil"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/edit_style"
        android:hint="Familyasi"
        android:inputType="textCapSentences"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/ismiigu"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/toolbar_child"
        app:layout_constraintVertical_bias="0.1"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintWidth_percent="0.85" />


    <EditText
        android:id="@+id/ismiigu"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edit_style"
        android:hint="Ismi"
        android:inputType="textCapSentences"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/otasining"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/famil"
        app:layout_constraintWidth_percent="0.85" />

    <EditText
        android:id="@+id/otasining"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edit_style"
        android:hint="Otasining ismi"
        android:inputType="textCapSentences"
        android:padding="10dp"
        app:layout_constraintBottom_toTopOf="@+id/datee"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ismiigu"
        app:layout_constraintWidth_percent="0.85" />

    <TextView
        android:id="@+id/datee"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/edit_style"
        android:gravity="center_vertical"
        android:hint="18/10/2021"
        android:padding="10dp"
        android:textColor="@color/black"
        android:textSize="17sp"
        app:drawableEndCompat="@drawable/ic_vectorkalendar"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/otasining"
        app:layout_constraintWidth_percent="0.85" />

    <Button
        android:id="@+id/qoshish"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="20dp"
        android:backgroundTint="#0A252F"
        android:text="Saqlash"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="17sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHeight_percent="0.075"
        app:layout_constraintHorizontal_bias="0.8"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintWidth_percent="0.45" />




</androidx.constraintlayout.widget.ConstraintLayout>